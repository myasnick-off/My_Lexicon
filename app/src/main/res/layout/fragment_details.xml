<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:focusable="true"
    android:clickable="true"
    android:padding="@dimen/margin_15">

    <TextView
        android:id="@+id/header_textview"
        style="@style/HeaderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Header" />

    <TextView
        android:id="@+id/transcription_textview"
        style="@style/BaseTextStyle"
        android:alpha="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="[transcription]" />

    <TextView
        android:id="@+id/description_textview"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description: line or block of text appearing
        at the top of each page of a book or document." />

    <TextView
        android:id="@+id/note_textview"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/margin_10"
        android:alpha="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description: line or block of text appearing
        at the top of each page of a book or document." />
    
    <com.example.mylexicon.utils.SquareImageView
        android:id="@+id/description_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        tools:src="@drawable/ic_baseline_wallpaper_96"/>


</LinearLayout>